<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:id="@+id/constraintLayout"
    tools:context=".SwitchActivity">

    <TextView
        android:id="@+id/titleTxt"
        android:textAppearance="@style/title"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintHorizontal_bias="0"
        android:singleLine="true"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/layoutMain"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="selected app"
    />

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_height="@dimen/buttonSize"
        android:layout_width="@dimen/buttonSize"
        android:visibility="gone"
        android:layout_marginEnd="16dp"
        android:background="@drawable/equalizer_selector"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/layoutMain"
        android:layout_marginStart="16dp"
        android:id="@+id/equalizerSel">
    </LinearLayout>

    <com.thf.AppSwitcher.utils.FlashButton
        android:layout_height="@dimen/buttonSize"
        android:layout_width="@dimen/buttonSize"
        android:layout_marginEnd="16dp"
        android:adjustViewBounds="false"
        android:scaleType="fitXY"
        android:background="@null"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/layoutMain"
        app:layout_constraintEnd_toStartOf="@+id/textClock"
        android:layout_marginStart="0dp"
        android:id="@+id/dimScreenMode" />

    <TextClock
        android:id="@+id/textClock"
        android:textAppearance="@style/clock"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/layoutMain"
        android:format12Hour="hh:mm a"
        android:format24Hour="HH:mm"
        app:layout_constraintEnd_toStartOf="@+id/settingsSel"
    />

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_height="@dimen/buttonSize"
        android:layout_width="@dimen/buttonSize"
        android:layout_marginEnd="16dp"
        android:background="@drawable/settings_selector"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/layoutMain"
        android:padding="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/settingsSel">
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutMain"
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_marginEnd="16dp"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/progressToTop"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="parent">

        <ProgressBar
            android:layout_height="1dp"
            android:layout_width="match_parent"
            android:layout_marginEnd="0dp"
            android:max="100"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_marginTop="0dp"
            android:forceDarkAllowed="false"
            android:layout_marginStart="0dp"
            android:progress="100"
            android:id="@+id/progressbarSw" />

        <androidx.recyclerview.widget.RecyclerView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="8dp"
            android:id="@+id/activityRecycler"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
